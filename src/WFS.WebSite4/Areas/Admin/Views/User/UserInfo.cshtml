@model WFS.WebSite4.Areas.Admin.Models.UserEditModel

<div id="infoMessagePanel" class="p_b10">
</div>
<div id="balanceMessagePanel" class="p_b10">
</div>

<div class="row">
    <fieldset class="p_b10">
        <legend>Update Profile Information</legend>
        <form id="accountInfoForm"  method="post">
            @Html.HiddenFor(x => x.UserInfo.UserId)
            @Html.HiddenFor(x => x.UserInfo.MembershipGuid)
            @Html.HiddenFor(x => x.UserInfo.EmailAddress)
            @Html.HiddenFor(x => x.UserInfo.AvailableCredit)


            <div class="row">
                <div class="two columns">
                    <label class="right inline">First Name:</label>
                </div>
                <div class="four columns">
                    @Html.TextBoxFor(m => m.UserInfo.FirstName)
                </div>
                <div class="two columns">
                    <label class="right inline">Last Name:</label>
                </div>
                <div class="four columns end">
                    @Html.TextBoxFor(m => m.UserInfo.LastName)
                </div>
            </div>

            <div class="row p_t20">
                <div class="twelve columns">
                    @{Html.RenderPartial("AddressInfo",
                        Model.UserInfo.BillingAddress,
                        new ViewDataDictionary(Html.ViewDataContainer.ViewData) { TemplateInfo = new System.Web.Mvc.TemplateInfo { HtmlFieldPrefix = "UserInfo.BillingAddress" } });}
                </div>
            </div>
        </form>

        <div class="row">
	        <div class="right">
		        <a href="#" id="save-link" msclick="usersearch.updateAccountInfo" class="radius button small">Update Account</a>&nbsp;&nbsp;&nbsp;
	        </div>
        </div>        
    </fieldset>

    <fieldset class="p_b10">
        <legend>Account Credits</legend>
            <form id="balanceForm"  method="post">
                @Html.HiddenFor(x => x.UserInfo.UserId)
                @Html.HiddenFor(x => x.UserInfo.MembershipGuid)
                @Html.HiddenFor(x => x.UserInfo.EmailAddress)

                <div class="row">
                    <div class="three columns">
                        <label class="right inline">Current Credits:</label>
                    </div>
                    <div class="four columns">
                        @Html.TextBoxFor(x => x.UserInfo.AvailableCredit)
                    </div>
                    <div class="three columns right">
		                <a href="#" id="save-link" msclick="usersearch.updateAccountBalance" class="radius button small">Update Balance</a>&nbsp;&nbsp;&nbsp;
                    </div>
                </div>
            </form>
    </fieldset>

    <fieldset class="p_b10">
        <legend>Reset Password</legend>
    </fieldset>

</div>
