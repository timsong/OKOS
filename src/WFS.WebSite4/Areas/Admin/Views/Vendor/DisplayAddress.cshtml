@model WFS.WebSite4.Areas.Admin.Models.VendorEditModel
<div class="panel">
	<div class="row">
			<div class="one columns">
				<div>
					@Html.Label(Model.Vendor.Name, new { @class = "label radius primary" })
				</div>
				<br />
				<div>
					<div class="label radius secondary">@Model.Vendor.AddressInfo.Address1</div>
					@if (!string.IsNullOrEmpty(Model.Vendor.AddressInfo.Address2))
							{<div class="label secondary">@Model.Vendor.AddressInfo.Address2</div>}
					<div class="label secondary">@Model.Vendor.AddressInfo.City, @Model.Vendor.AddressInfo.State @Model.Vendor.AddressInfo.ZipCode</div>
				</div>
			</div>
	</div>
</div>
