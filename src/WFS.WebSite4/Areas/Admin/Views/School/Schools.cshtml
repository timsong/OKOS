@model WFS.WebSite4.Areas.Admin.Models.SchoolsViewModel

@{
    ViewBag.Title = "Schools";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="javascript:void(0)" msclick="school.add">Add New School</a>
</p>

<div id="modalEdit" class="reveal-modal">
</div>

<div id="schoolList">
@foreach (var item in Model.Schools) {
    <div class="panel">
        <div class="row">
            <div class="twelve columns">
                <div class="eight columns">
                    @item.Name
                </div>
                <div class="one columns">
                    @Html.RouteLink("Edit/View","admin.school.view",new { schoolID = item.OrganizationId })
                </div>
                <div class="one columns">
                    @Html.ActionLink("Delete", "admin.school.delete", new { vendorID = item.OrganizationId })
                </div>
                <div class="one columns"></div>
            </div>
        </div>
    </div>
}
</div>

@section scripts{
	@System.Web.Optimization.Scripts.Render("~/bundles/admin/school")
}