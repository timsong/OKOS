@model WFS.WebSite4.Models.SupportTicketEditModel

<h2>Resolve Ticket #@Model.Ticket.TicketId</h2>
    <fieldset>
        <legend>Ticket Created by: @String.Format("{0}, {1}", Model.Ticket.LastName, Model.Ticket.FirstName)</legend>
        <div class="row">
            <div class="three columns">
                <label class="right">Contact Email:</label>
            </div>
            <div class="four columns">
                <a href="mailto:@Model.Ticket.EmailAddress" id="A3" tsclick="createPayment.processPayment(false)">@Model.Ticket.EmailAddress</a>
            </div>
            <div class="two columns">
                <label class="right">Phone:</label>
            </div>
            <div class="three columns">
                @Model.Ticket.ContactPhone
            </div>
        </div>
           
        <div class="row p_t5">
            <div class="three columns">
                <label class="right">Created On:</label>
            </div>
            <div class="four columns ">
                @Model.Ticket.CreatedDate.ToShortDateString()
            </div>
            <div class="two columns">
                <label class="right">Category:</label>
            </div>
            <div class="three columns end">
                @Model.Ticket.SupportCategory.ToString()
            </div>
        </div>

        <div class="row p_t10">
            <div class="three columns">
                <label class="right">Issue:</label>
            </div>
            <div class="nine columns ">
                @Model.Ticket.IssueText
            </div>
        </div>
    </fieldset>

<form id="resolveSupportForm"  method="post" class="p_t10">
    @Html.HiddenFor(x => x.Ticket.TicketId);

    <fieldset>
        <legend>Resolution</legend>
           
        <div class="row p_t5">
            <div class="three columns">
                <label class="right">Resolved On:</label>
            </div>
            <div class="three columns ">
                @if (Model.Ticket.ResolvedDate.HasValue)
                {
                    Model.Ticket.ResolvedDate.Value.ToShortDateString();   
                }
            </div>
            <div class="three columns">
                <label class="right">Resolved By:</label>
            </div>
            <div class="three columns end">
                @if (Model.Ticket.ResolvedDate.HasValue)
                {
                    @Model.Ticket.ResolvedBy
                }
            </div>
        </div>        
        <div class="row">
            <div class="three columns">
                <label class="right">Answer:</label>
            </div>
            <div class="nine columns ">
                @Html.TextAreaFor(x => x.Ticket.ResolvedText, new { @class = "h150px" })
            </div>    
        </div>    
    </fieldset>
</form>

<div class="row">
	<div class="six columns"></div>
	<div class="six columns end right">
		<a href="#" id="save-link" msclick="home.resolveSupportTicket" class="radius button">Resolve</a>&nbsp;&nbsp;&nbsp;
		<a href="#" class="close-reveal-modal radius button">Cancel</a>
	</div>
</div>