@model WFS.Contract.PhoneAddress
    <fieldset>
        <legend>Address & Contact Info</legend>
        <div class="row">
            <div class="twelve columns">
                @Html.TextBoxFor(x => x.Address1, new { placeholder = "Address Line 1" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="twelve columns end">
                @Html.TextBoxFor(x => x.Address2, new { placeholder = "Address Line 2" })
            </div>
        </div>
        <br />

        <div class="row">
            <div class="six columns">
                @Html.TextBoxFor(x => x.City, new {placeholder = "City" })
            </div>
            <div class="three columns">
                @Html.TextBoxFor(x => x.State, new {placeholder = "State" })
            </div>
            <div class="three columns">
                @Html.TextBoxFor(x => x.ZipCode, new {placeholder = "Zip Code" })
            </div>
        </div>  

        <br />

        <div class="row">
            <div class="six columns">
                @Html.TextBoxFor(x => x.PhoneNumber, new {placeholder = "Phone Number" })
            </div>
            <div class="three columns end">
                @Html.TextBoxFor(x => x.PhoneExt, new {placeholder = "Extension" })
            </div>
        </div>  
    </fieldset>
