@model List<WFS.Contract.Vendor>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Vendor List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="w60">
    @foreach (var item in Model)
    {
        <div class="left">@Html.DisplayFor(x => item.Name)</div>
        <div class="left">
            @Html.ActionLink("Edit", "Edit", "Vendor", new { Area = "Admin", vendorId = item.VendorId }, new { }) |
        </div>
        <div class="left">
            @Html.ActionLink((item.IsActive) ? "Deactivate" : "Activate", "Edit", new { id = item.VendorId }) |
        </div>
        <div class="left">
            @Html.ActionLink("Delete", "Delete", new { id = item.VendorId })
        </div>
        <div class="clear"></div>
    }    
</div>
